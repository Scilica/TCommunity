{% extends "TCMainBundle::layout.html.twig" %}

{% block title %} {{ parent() }} - news {% endblock %}

{% block body %}

{% for jeux in games %}
  <div class="row">
    <div class="larger">
    <div class="heading_carrousel col-md-12 col-lg-12">{{ jeux.title }}</div>
    <div class="row">
          <div class="try123 col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <img src="{{ jeux.coverUrl }} " alt="{{ jeux.coverAlt }}" class="img-responsive imgcadre" />
        </div>
       </div>
     </div>
        <div class="mobiler col-xs-12 hidden-sm col-md-5 col-lg-5 img456">
          <div class="row">
            <div class="content1">
              <div class="heading_widget col-lg-12">Information sur le jeu</div>
                <div class="game_info_gameview col-lg-12">
                  <div class="row">
                      <div class="col-xs-5 col-sm-5 col-lg-5 s1">
                        <img src="{{ jeux.jaquetteUrl }} " alt="Jaquette face final fantasy xiv" class="img-responsive test123 divimg"  />
                      </div>
                      <div class="col-xs-7 col-sm-7 col-lg-7 tablo">
                        <div class="row">
                            <div class="col-lg-12 cell">
                              <h1>{{jeux.title}}</h1>
                            </div>
                            <div class="col-lg-12 cell">
                              <span class="label1">Editeur(s):</span> <span class="h21">{{jeux.editor}}</span>
                            </div>
                            <div class="col-lg-12 cell">
                              <span class="label1">Plateforme(s):</span> <span class="h21">{{jeux.plateform}}</span>
                            </div>
                            <div class="col-lg-12 cell">
                              <span class="label1">Genre(s):</span> <span class="h21">{{jeux.type}}</span>
                            </div>
                            <div class="col-lg-12 cell">
                              <span class="label1">Sortie France:</span> <span class="h21">{{jeux.date|date("d/m/Y")}}</span>
                            </div>  
                        </div>
                      </div> 
                  </div>

                </div>
              </div>
            </div>
        </div>
        <div class="mobiler col-xs-12 hidden-sm col-md-7 col-lg-7 img123">
          <div class="row">
            <div class="content1">
              <div class="heading_widget col-lg-12">À PROPOS DE CE JEU</div>
                <div class="game_info_gameview col-lg-12">
                  <div class="row">
                    <div class="content_game_info">
                      <p>{{ jeux.description }}</p>
                      </div>
                      
                  </div>

                </div>
              </div>
            </div>
        </div>
      </div>
<div class="row">
      <div class="heading_big_picture2 col-md-12 col-lg-12">Nos catégories sur - {{jeux.title}} - <span class="size_icon glyphicon glyphicon-chevron-down" aria-hidden="true"></span></div></div>

{% endfor %}
<div class="row">
  <div class="largest_div">
{% for category in categories %}

 <div class="div col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <div class="row">
                <img src=" {{ category.miniatureUrl }} " alt="{{ category.miniatureAlt }}" class="img-responsive dididov" onclick="window.location.href='{{ path('tc_writer_guides_category_filtred', {'jeux': category.game.title| replace({' ': '_'}) ,'category': category.title| replace({' ': '_'}) }) }}'" />
            <div class="titlecategory" onclick="window.location.href='{{ path('tc_writer_guides_category_filtred', {'jeux': category.game.title| replace({' ': '_'}) ,'category': category.title| replace({' ': '_'}) }) }}'">
              <h1>Catégorie - {{ category.title }}</h1>
            </div>
        </div>
      </div>
      </div>

{% endfor %}
</div>
 <!-- MOBILE div  -->
            {% for category in categories %}
            <div class="mobile div col-xs-12">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <div class="row">
                <img src=" {{ category.miniatureUrl }} " alt="{{ category.miniatureAlt }}" class="img-responsive dididov " onclick="window.location.href='{{ path('tc_writer_guides_category_filtred', {'jeux': category.game.title| replace({' ': '_'}) ,'category': category.title| replace({' ': '_'}) }) }}'" />
            <div class="title" onclick="window.location.href='{{ path('tc_writer_guides_category_filtred', {'jeux': category.game.title| replace({' ': '_'}) ,'category': category.title| replace({' ': '_'}) }) }}'">
              <h1>Catégorie - {{ category.title }}</h1>
            </div>
        </div>
      </div>
      </div>
            {% endfor %}
            <!-- END MOBILE div  -->
</div>
{% endblock %}