{# src/OC/PlatformBundle/Resources/views/News/index.html.twig #}

{% extends "TCMainBundle::layout.html.twig" %}

{% block title %} {{ parent() }} - article {% endblock %}

{% block body %}

	 {% for article in monarticle %}
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="row">
        <div class="row">
          <div class="col-md-12 col-lg-8 imglol">
            <img src="{{ article.miniatureUrl }} " alt="miniature" class="img-responsive imgcadre" />
        </div>
        <div class="hidden-md hidden-sm hidden-xs col-lg-4 img456">
          <div class="row">
            <div class="content1">
              <div class="heading_widget col-lg-12">
                Fiche du jeu
              </div>
              <div class="game_info col-lg-12">
                <div class="row">
                  <div class="col-lg-5 s1">
                    <img src="{{ article.game.jaquetteUrl }} " alt="Jaquette face final fantasy xiv" class="img-responsive test123 divimg"  />
                  </div>
                  <div class="col-lg-7 tablo">
                    <div class="row">
                      <div class="col-lg-12 cell">
                        <h1>{{article.game.title}}</h1>
                      </div>
                      <div class="col-lg-12 cell">
                        <span class="label1">Editeur(s):</span> <span class="h21">{{article.game.editor}}</span>
                      </div>
                      <div class="col-lg-12 cell">
                        <span class="label1">Plateforme(s):</span> <span class="h21">{{article.game.plateform}}</span>
                      </div>
                      <div class="col-lg-12 cell">
                        <span class="label1">Genre(s):</span> <span class="h21">{{article.game.type}}</span>
                      </div>
                      <div class="col-lg-12 cell">
                        <span class="label1">Sortie France:</span> <span class="h21">{{article.game.date|date("d/m/Y")}}</span>
                      </div>  
                    </div>
                  </div> 
                </div>
                <div class="row">
                  <div class="col-lg-12">
                    <button class="btn gameindex_button_blue" onclick="window.location.href='{{ path('tc_writer_jeux_view', {'jeux': article.game.title| replace({' ': '_'})}) }}'" >Voir la fiche du jeu</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="content2">
              <div class="redactor_info col-lg-12">
                <div class="row">
                  <div class="col-lg-4">
                    <img src="/Symfony/web/gallery/image/Avatar/avatar.png" alt="" class="img-responsive userimg" />
                  </div>
                  <div class="col-lg-8 tablo2">
                    <div class="row">
                      <div class="col-lg-12 cell2">
                        <span class="label2">Rédigé par </span> <span class="h23">{{article.author}}</span>
                      </div>
                      <div class="col-lg-12 cell2">
                        <span class="label2">Publié le </span><span class="h24">{{article.date|date("d/m/Y")}}</span>
                      </div>
                    </div>
                  </div> 
                </div>
              </div>
            </div>
          </div>      
        </div>
    <div class="col-md-12 col-lg-12">
          <div class="title_content">{{ article.title }}</div>
          <div class="content">
            {{ article.content|raw}}
          </div>
          <div class="tag">
            {%for tag in article.tag %}
            <span><a class="btn tag_button {{ tag.color }}" href="{{ path('tc_writer_tag_view', {'tag': tag.title| replace({' ': '_'})}) }}">{{ tag.title }}</a></span>
            {% endfor %}
          </div>
          {% endfor %}
    </div>
    <div class="col-md-12 col-lg-12">
      <div class="row">
        <div class="heading_big_picture col-md-12 col-lg-12">A voir aussi</div>
      </div>
      {% for articles in otherarticles %}
        <div class="div col-xs-12 col-sm-12 col-md-4 col-lg-4 ">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <div class="row">
              <div class="encart_small"><h1>articles</h1></div>
                <img src=" {{ articles.miniatureUrl }} " alt="{{ articles.miniatureAlt }}" class="img-responsive dididov" onclick="window.location.href='{{ path('tc_writer_articles_view', {'jeux': articles.game.title| replace({' ': '_'}) ,'id': articles.id }) }}'" />
            <div class="title" onclick="window.location.href='{{ path('tc_writer_articles_view', {'jeux': articles.game.title| replace({' ': '_'}) ,'id': articles.id }) }}'">
              <h1>{{ articles.title }}</h1>
            </div>
        </div>
      </div>
      </div>
      {% endfor %}
    </div>
  </div>

{% endblock %}