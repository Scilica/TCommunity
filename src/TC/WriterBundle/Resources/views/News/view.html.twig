{# src/OC/PlatformBundle/Resources/views/News/index.html.twig #}

{% extends "TCMainBundle::layout.html.twig" %}

{% block title %} {{ parent() }} - news {% endblock %}

{% block body %}

	{% for news in manews %}
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="row">
        <div class="row">
          <div class="col-md-12 col-lg-8 imglol">
            <img src="{{ news.miniatureUrl }} " alt="miniature" class="img-responsive imgcadre" />
        </div>
        <div class="hidden-md hidden-sm hidden-xs col-lg-4 img456">
          <div class="row">
            <div class="content1">
              <div class="heading_widget col-lg-12">
                Fiche du jeu
              </div>
              <div class="game_info col-lg-12">
                <div class="row">
                  <div class="col-lg-5 s1">
                    <img src="{{ news.game.jaquetteUrl }} " alt="Jaquette face final fantasy xiv" class="img-responsive test123 divimg"  />
                  </div>
                  <div class="col-lg-7 tablo">
                    <div class="row">
                      <div class="col-lg-12 cell">
                        <h1>{{news.game.title}}</h1>
                      </div>
                      <div class="col-lg-12 cell">
                        <span class="label1">Editeur(s):</span> <span class="h21">{{news.game.editor}}</span>
                      </div>
                      <div class="col-lg-12 cell">
                        <span class="label1">Plateforme(s):</span> <span class="h21">{{news.game.plateform}}</span>
                      </div>
                      <div class="col-lg-12 cell">
                        <span class="label1">Genre(s):</span> <span class="h21">{{news.game.type}}</span>
                      </div>
                      <div class="col-lg-12 cell">
                        <span class="label1">Sortie France:</span> <span class="h21">{{news.game.date|date("d/m/Y")}}</span>
                      </div>  
                    </div>
                  </div> 
                </div>
                <div class="row">
                  <div class="col-lg-12">
                    <button class="btn gameindex_button_blue" onclick="window.location.href='{{ path('tc_writer_jeux_view', {'jeux': news.game.title| replace({' ': '_'})}) }}'" >Voir la fiche du jeu</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="content2">
              <div class="redactor_info col-lg-12">
                <div class="row">
                  <div class="col-lg-4">
                    <img src="/Symfony/web/gallery/image/Avatar/avatar.png" alt="" class="img-responsive userimg" />
                  </div>
                  <div class="col-lg-8 tablo2">
                    <div class="row">
                      <div class="col-lg-12 cell2">
                        <span class="label2">Rédigé par </span> <span class="h23">{{news.author}}</span>
                      </div>
                      <div class="col-lg-12 cell2">
                        <span class="label2">Publié le </span><span class="h24">{{news.date|date("d/m/Y")}}</span>
                      </div>
                    </div>
                  </div> 
                </div>
              </div>
            </div>
          </div>      
        </div>
    <div class="col-md-12 col-lg-12">
          <div class="title_content">{{ news.title }}</div>
          <div class="content">
            {{ news.content|raw}}
          </div>
          <div class="tag">
            {%for tag in news.tag %}
            <span><a class="btn tag_button {{ tag.color }}" href="{{ path('tc_writer_tag_view', {'tag': tag.title| replace({' ': '_'})}) }}">{{ tag.title }}</a></span>
            {% endfor %}
          </div>
          {% endfor %}
    </div>
    <div class="col-md-12 col-lg-12">
      <div class="row">
        <div class="heading_big_picture col-md-12 col-lg-12">A voir aussi</div>
      </div>
      {% for news in othernews %}
        <div class="div col-xs-12 col-sm-12 col-md-4 col-lg-4 ">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <div class="row">
              <div class="encart_small"><h1>news</h1></div>
                <img src=" {{ news.miniatureUrl }} " alt="{{ news.miniatureAlt }}" class="img-responsive dididov" onclick="window.location.href='{{ path('tc_writer_news_view', {'jeux': news.game.title| replace({' ': '_'}) ,'id': news.id }) }}'" />
            <div class="title" onclick="window.location.href='{{ path('tc_writer_news_view', {'jeux': news.game.title| replace({' ': '_'}) ,'id': news.id }) }}'">
              <h1>{{ news.title }}</h1>
            </div>
        </div>
      </div>
      </div>
      {% endfor %}
    </div>

    <div id="fos_comment_thread" data-thread="{{ thread.id }}">

{% include '@FOSComment/Thread/comments.html.twig' with {
    'comments': comments,
    'thread': thread
} %}

</div>
  </div>
{% endblock %}

