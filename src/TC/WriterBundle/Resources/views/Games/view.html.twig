              <h1>{{ guides.title }}</h1>
            </div>
        </div>
      </div>
      </div>
              {% endfor %}
            </div>

            <!-- MOBILE div  -->
            {% for guides in listGuides %}
            <div class="mobile div col-xs-12">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row">
                  <img src=" {{ guides.miniatureUrl }} " alt="{{ guides.miniatureAlt }}" class="img-responsive dididov" onclick="window.location.href='{{ path('tc_writer_guides_view', {'jeux': guides.game.title| replace({' ': '_'}) ,'category': guides.category.title| replace({' ': '_'})| replace({'\'': '-'}) ,'id': guides.id }) }}'" />
