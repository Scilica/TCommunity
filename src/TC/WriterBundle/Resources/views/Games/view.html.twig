            {% endfor %}
            <!-- END MOBILE div  -->
            <div class="row">
              <div class="footer_latest col-xs-12 col-lg-12">
                <div class="contain_button col-md-12 col-lg-12">
                   <button class="btn allofthem_button float_right" onclick="window.location.href='{{ path('tc_writer_guides_game_filtred', {'jeux': jeux.title| replace({' ': '_'})} )}}'">tous nos guides sur {{ jeux.title }} <span class="size_icon glyphicon glyphicon-menu-right"></span></button>
